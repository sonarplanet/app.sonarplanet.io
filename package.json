{
  "name": "sonarplanet",
  "version": "0.0.0",
  "description": "Sonar Planet front-end (html, ts)",
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:sonarplanet/sonarplanet.github.io.git"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "collectCoverage": false,
    "automock": false,
    "setupTestFrameworkScriptFile": "mock-local-storage"
  },
  "bugs": {
    "url": "https://github.com/sonarplanet/sonarplanet.github.io/issues"
  },
  "homepage": "https://github.com/sonarplanet/sonarplanet.github.io/README.md",
  "author": "TREGUER Fabien <fabien.treguer@spacelephant.org> http://spacelephant.org#fabien",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "WEBPACK_ENV_MODE=development webpack-dev-server -p --progress --mode=development",
    "integ": "WEBPACK_ENV_MODE=integration webpack -p --progress",
    "prod": "WEBPACK_ENV_MODE=production webpack",
    "test": "jest",
    "pretty": "prettier --config ./prettier.config.js \"{src,test}/**/*.ts\"",
    "prettify": "yarn pretty --write",
    "prettify:check": "yarn pretty -l",
    "lint": "tslint -c ./tslint.json -t codeFrame \"{src,test}/**/*.ts\""
  },
  "devDependencies": {
    "@types/fetch-mock": "^6.0.1",
    "@types/jest": "^22.2.3",
    "@types/jquery": "^3.3.1",
    "@types/node-fetch": "^1.6.9",
    "css-loader": "^0.28.11",
    "fetch-mock": "^6.3.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^22.4.3",
    "mock-local-storage": "^1.0.5",
    "node-fetch": "^2.1.2",
    "node-sass": "^4.8.3",
    "responsive-loader": "^1.1.0",
    "sass-loader": "^7.0.1",
    "sharp": "^0.20.1",
    "string-replace-loader": "^2.1.1",
    "style-loader": "^0.21.0",
    "ts-jest": "^22.4.5",
    "ts-loader": "^4.2.0",
    "typescript": "^2.8.3",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15",
    "webpack-dev-server": "^3.1.3",
    "webpack-merge": "^4.1.2",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.12.0",
    "tslint-config-standard": "^7.0.0",
    "prettier": "1.12.1"
  },
  "dependencies": {
    "short-unique-id": "^1.1.1"
  }
}

